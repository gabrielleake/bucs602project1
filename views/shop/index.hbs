<div class="row">
    <div class="col-sm-7 col-md-5 col-md-offset-5 col-sm-offset-4">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
{{#each products}}
   <!-- // loop through groups of products where each group contains 3 products, to make up a row.
    // within each group, loop through individual items to create columns
    // outer each loop - row for each "group"-->
    <div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description" maxlength="10">{{ this.description }}</p>

                <div class="clearfix">
                    <div class="price pull-left">${{ this.price }}</div>
                    <hr>
                    <div class="text-danger pull-left">Amount Remaining: {{ this.stockQty }}</div>
                    <a href="/addToCart/{{this._id}}" class="btn btn-success pull-right" role="button">Buy</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    </div>
{{/each}}